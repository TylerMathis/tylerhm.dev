{
  "parser": "@babel/eslint-parser",
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "indent": ["error", 2],

    "react/react-in-jsx-scope": ["off"]
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ]
}